<!-- Header -->
<section class="hero welcome has-background-primary">
  <div class="hero-body py-5">
    <div class="container">
      <h1 class="title has-text-centered has-text-weight-bold is-2">
        Welcome {{user}}!
      </h1>
      <div class="columns is-centered">
        <div class="column is-4-desktop is-5-tablet">
          <nav class="level">
            <!-- Left side -->
            <div class="level-left">
              <div class="level-item">
                <button id="createButton" class="button is-info">
                  Create memory
                </button>
              </div>
            </div>

            <!-- Right side -->
            <div class="level-right">
              <div class="level-item">
                <button id="logoutButton" class="button is-warning">
                  Logout
                </button>
              </div>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <h2 class="has-text-centered has-text-white">FILTERS: (In development)</h2>
</section>

<!-- Navbar -->
<nav>
  <div class="container is-fluid">
    <div class="columns is-mobile is-multiline is-centered pt-2">
      <div class="column is-mobile is-9-tablet is-8-desktop">
        <div class="columns is-mobile is-multiline is-centered filters">
          <div class="column is-half-mobile">
            <button class="button is-primary">Default</button>
          </div>
          <div class="column is-half-mobile">
            <button class="button is-primary">By Range</button>
          </div>
          <div class="column is-half-mobile">
            <button class="button is-primary">By Location</button>
          </div>
          <div class="column is-half-mobile">
            <button class="button is-primary">By Rating</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Memories Container -->
<section class="pt-5">
  <h1 class="subtitle is-4 has-text-centered">{{user}}'s Memories</h1>

  <!-- Memory Cards -->
  <div class="container is-fluid">
    <div class="columns is-mobile is-centered">
      <div class="column is-11-mobile is-8-tablet is-half-desktop memory-container">
        {{!-- Dynamically load memory cards --}}
        {{#each memory}}
        <div class="box memory-card">
          <article class="media columns is-multiline is-mobile is-centered flex-rtl">
            <div class="media-center">
              <figure class="image thumbnail">
                <img src="{{imageArray}}" alt="Memory Image" />
              </figure>
            </div>
            <div class="media-content column is-12-mobile">
              <div class="content">
                <h2>{{title}}&emsp;<button data-id="{{this.id}}"
                    class="button is-small is-light is-link is-light viewButton">View</button></h2>
                <p>
                  Date: <span class="datetime" value="{{date}}">{{date}}</span>
                </p>
                <p>
                  Rating: {{rating}}
                </p>
              </div>
            </div>
          </article>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/assets/js/memories.js"></script>