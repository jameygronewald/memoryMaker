<!-- Header -->
<section class="hero welcome has-background-primary">
  <div class="hero-body py-5">
    <div class="container">
      <h1 class="title has-text-centered has-text-weight-bold is-2">
        {{#memory}}
        {{title}}
        {{/memory}}
      </h1>
      <div class="columns is-centered">
        <div class="column is-4-desktop is-5-tablet">
          <nav class="level">
            <!-- Left side -->
            <div class="level-left">
              <div class="level-item">
                <button id="goBack" class="button is-info">
                  Go back
                </button>
              </div>
            </div>

            <!-- Right side -->
            <div class="level-right">
              <div class="level-item">
                <button id="logoutButton" class="button is-warning">
                  Logout
                </button>
              </div>
            </div>
          </nav>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container is-fluid main-bg">
  <div class="columns is-mobile is-centered mt-6">
    <div class="box column is-mobile is-two-thirds-tablet is-8-desktop">
      <div class="columns">
        <div class="column">
          <ul>
            {{#each memory}}
            <li>
              <h2 class="title">{{date}}</h2>
              <h3 class="subtitle"><strong>Location:</strong> {{location}}</h3>
              <h3 class="subtitle"><strong>Description:</strong> {{description}}</h3>
              <h3 class="subtitle"><strong>Rating:</strong> {{rating}}</h3>
              <div class="has-text-centered mb-6" id="image">
                <img src="{{imageArray}}" class="single-memory" style="width: 330px;" />
              </div>

              <button id="delete-memory" data-id="{{this.id}}" class="button is-small is-danger">Delete</button>
              <button id="update-memory" data-id="{{this.id}}" class="button is-small is-primary">Update memory</button>
            </li>
            {{/each}}
          </ul>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
          <script src="/assets/js/memory.js"></script>
        </div>
      </div>
    </div>
  </div>
</div>